<h3>User comments</h3>
  <ul>
  <% @movie.comments.each do |comment| %>
    <li id="comment-item">

      <span>"</span>
      <%= comment.body %>
      <span>"</span>
      <%= link_to 'Edit Comment', edit_movie_comment_path(@movie, comment.id) %>
      <%= link_to 'Delete Comment', movie_comment_path(@movie, comment), method: :delete %>
    </li>
    <% end %>
  </ul>
</div>

<div id='new-comment'>
