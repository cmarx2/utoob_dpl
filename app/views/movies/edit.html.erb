<h1>Edit your Utoob movie</h1>

<%= form_for(@movie) do |f| %>
 <div class="field">
   <%= f.label :title %>
   <%= f.text_field :title, required: true, autofocus: true %>
    <%= f.label :duration %>
   <%= f.text_field :duration, required: true %>
    <%= f.label :genre %>
   <%= f.text_field :genre, required: true%>
    <%= f.label :description %>
   <%= f.text_field :description, required: true%>
    <%= f.label :trailer %>
   <%= f.text_field :trailer, required: true%>
   <%= f.submit %>
 </div>
<% end %>