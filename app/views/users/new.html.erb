<h1>Sign up for Utoob fun!</h1>

<h2 id ='utoob-h2'>Itoob, Utoob, we all toob for Utoob!</h2>


<%= form_for(@user) do |f| %>
 <div class="field" id="form-style">
   <%= f.label :name %>
   <%= f.text_field :name, required: true, autofocus: true %>
    <%= f.label :password %>
   <%= f.text_field :password, required: true %>
    <%= f.label :email %>
   <%= f.text_field :email, required: true%>
   <%= f.submit %>
 </div>
<% end %>